{
	"name": "open-meteo-website",
	"type": "module",
	"author": "Open-Meteo <info@open-meteo.com>",
	"private": true,
	"version": "1.52.3",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/open-meteo/open-meteo-website.git"
	},
	"description": "This package contains the Open-Meteo website",
	"scripts": {
		"dev": "svelte-kit sync && vite dev --host",
		"build": "svelte-kit sync && vite build -l info",
		"build-weather": "BUILD_WEATHER_PAGES=true svelte-kit sync && BUILD_WEATHER_PAGES=true vite build -l info",
		"staging": "NODE_ENV=development vite build --mode development",
		"preview": "vite preview --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"format": "prettier --write .",
		"rename_index_files": "node scripts/rename_to_index_html.js",
		"update-components": "npx shadcn-svelte@latest add -y -o accordion alert button calendar checkbox dialog dropdown-menu input label popover range-calendar select separator sonner toggle toggle-group",
		"cy:run": "npx cypress run",
		"cy:open": "npx cypress open ",
		"build:preview": "npm run build && npm run preview",
		"cypress:run": "start-server-and-test build:preview http://localhost:4173 cy:run",
		"cypress:open": "start-server-and-test build:preview http://localhost:4173 cy:open",
		"cypress:local:run": "CYPRESS_BASE_URL=http://localhost:5173 start-server-and-test dev http://localhost:5173 cy:run",
		"cypress:local:open": "CYPRESS_BASE_URL=http://localhost:5173 start-server-and-test dev http://localhost:5173 cy:open"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.563.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.50.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@vitest/coverage-v8": "^4.0.6",
		"@poppanator/sveltekit-svg": "^6.0.0",
		"@shikijs/transformers": "^3.22.0",
		"@sveltejs/enhanced-img": "^0.9.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^2.15.2",
		"clsx": "^2.1.1",
		"cookie": "^1.1.1",
		"cypress": "^15.9.0",
		"eslint": "^9.39.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.14.0",
		"formsnap": "^2.0.0",
		"jsdom": "^27.4.0",
		"globals": "^17.3.0",
		"mdsvex": "^0.12.3",
		"mode-watcher": "^1.1.0",
		"prettier": "^3.8.0",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"start-server-and-test": "^2.1.0",
		"svelte": "^5.49.1",
		"svelte-check": "^4.3.0",
		"sveltekit-superforms": "^2.29.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.0.3",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.2",
		"vite": "^7.3.0",
		"vitest": "^4.0.4",
		"zod": "^4.3.5",
		"highcharts": "12.5.0",
		"lucide-static": "^0.563.0",
		"openmeteo": "^1.2.0",
		"prism-themes": "^1.9.0",
		"rollup-plugin-visualizer": "^6.0.0",
		"shiki": "^3.22.0",
		"simple-icons": "^16.7.0",
		"svelte-persisted-store": "^0.12.0",
		"typescript-eslint": "^8.54.0"
	}
}
