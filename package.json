{
	"name": "open-meteo-website",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "svelte-kit sync && vite dev --host",
		"build": "svelte-kit sync && vite build -l info",
		"build-weather": "BUILD_WEATHER_PAGES=true svelte-kit sync && BUILD_WEATHER_PAGES=true vite build -l info",
		"staging": "NODE_ENV=development vite build --mode development",
		"preview": "vite preview --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"test": "vitest",
		"format": "prettier --write .",
		"rename_index_files": "node scripts/rename_to_index_html.js",
		"update-components": "npx shadcn-svelte@latest add -y -o accordion alert button calendar checkbox dialog dropdown-menu input label popover range-calendar select separator sonner toggle toggle-group",
		"cy:run": "npx cypress run",
		"cy:open": "npx cypress open ",
		"build:preview": "npm run build && npm run preview",
		"cypress:run": "start-server-and-test build:preview http://localhost:4173 cy:run",
		"cypress:open": "start-server-and-test build:preview http://localhost:4173 cy:open",
		"cypress:local:run": "CYPRESS_BASE_URL=http://localhost:5173 start-server-and-test dev http://localhost:5173 cy:run",
		"cypress:local:open": "CYPRESS_BASE_URL=http://localhost:5173 start-server-and-test dev http://localhost:5173 cy:open"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.0",
		"@internationalized/date": "^3.9.0",
		"@lucide/svelte": "^0.544.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.42.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"bits-ui": "^2.11.0",
		"clsx": "^2.1.1",
		"cookie": "^1.0.2",
		"cypress": "^15.3.0",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.12.2",
		"formsnap": "^2.0.0",
		"globals": "^16.4.0",
		"jsdom": "^27.0.0",
		"lucide-svelte": "^0.544.0",
		"mdsvex": "^0.12.3",
		"mode-watcher": "^1.1.0",
		"prettier": "^3.6.0",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"start-server-and-test": "^2.1.0",
		"svelte": "^5.39.4",
		"svelte-check": "^4.3.0",
		"sveltekit-superforms": "^2.27.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.0",
		"tailwindcss": "^4.0.3",
		"tw-animate-css": "^1.3.6",
		"typescript": "^5.9.2",
		"vite": "^7.1.2",
		"vitest": "^3.2.4",
		"zod": "^4.1.1"
	},
	"dependencies": {
		"@poppanator/sveltekit-svg": "^6.0.0",
		"@shikijs/transformers": "^3.13.0",
		"@sveltejs/enhanced-img": "^0.8.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"autoprefixer": "^10.4.20",
		"highcharts": "12.4.0",
		"lucide-static": "^0.544.0",
		"openmeteo": "^1.2.0",
		"prism-themes": "^1.9.0",
		"rollup-plugin-visualizer": "^6.0.0",
		"shiki": "^3.13.0",
		"simple-icons": "^15.16.0",
		"svelte-persisted-store": "^0.12.0",
		"typescript-eslint": "^8.44.0"
	}
}
