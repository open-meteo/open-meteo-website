{
	"name": "open-meteo-website",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "svelte-kit sync && vite dev --host",
		"build": "svelte-kit sync && vite build -l info",
		"staging": "NODE_ENV=development vite build --mode development",
		"rename_index_files": "node scripts/rename_to_index_html.js",
		"preview": "vite preview --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"update-components": "npx shadcn-svelte@latest add -y -o accordion alert button calendar checkbox dialog dropdown-menu input label popover range-calendar select separator sonner toggle toggle-group"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@internationalized/date": "^3.8.0",
		"@lucide/svelte": "^0.503.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.20.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"bits-ui": "^1.4.1",
		"clsx": "^2.1.1",
		"cookie": "^1.0.2",
		"eslint": "^9.25.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.5.0",
		"formsnap": "^2.0.0",
		"globals": "^16.0.0",
		"lucide-svelte": "^0.503.0",
		"mdsvex": "^0.12.3",
		"mode-watcher": "^1.0.2",
		"prettier": "^3.5.0",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.28.1",
		"svelte-check": "^4.1.4",
		"sveltekit-superforms": "^2.24.0",
		"tailwind-merge": "^3.2.0",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.0.3",
		"typescript": "^5.8.2",
		"vite": "^6.3.0",
		"zod": "^3.24.1"
	},
	"dependencies": {
		"@poppanator/sveltekit-svg": "^5.0.1",
		"@shikijs/transformers": "^3.3.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.1",
		"autoprefixer": "^10.4.20",
		"highcharts": "12.2.0",
		"lucide-static": "^0.503.0",
		"openmeteo": "^1.2.0",
		"prism-themes": "^1.9.0",
		"rollup-plugin-visualizer": "^5.14.0",
		"shiki": "^3.3.0",
		"simple-icons": "^14.12.0",
		"svelte-persisted-store": "^0.12.0",
		"typescript-eslint": "^8.31.0",
		"vite-plugin-tailwindcss-cleaner": "^1.1.0"
	}
}
